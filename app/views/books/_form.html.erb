<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :isbn %>
    <%= form.text_field :isbn %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :language %>
    <%= form.text_field :language %>
  </div>

  <div class="field">
    <%= form.label :date_published %>
    <%= form.date_select :date_published, :start_year => 1900 %>
  </div>

  <div class="field">
    <%= form.label :edition %>
    <%= form.number_field :edition %>
  </div>

  <div class="field">
    <%= form.label :front_cover_img %>
    <%= form.file_field :front_cover_img, :accept => 'image/*' %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_area :summary %>
  </div>

  <div class="field">
    <%= form.label :special_collection %>
    <%= form.check_box :special_collection %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
