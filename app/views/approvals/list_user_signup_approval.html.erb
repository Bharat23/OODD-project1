<h1>Signup Approvals</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_for_approval.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Approve', approve_reject_signup_path(user.id, 1) %></td>
        <td><%= link_to 'Reject', approve_reject_signup_path(user.id, 2)%></td>
        <%# <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>